import random

print("Угадай число за 3 попытки! От 1 до 10")
secret = random.randint(1, 10)

for i in range(1, 4):
    guess = int(input(f"Попытка {i}: "))
    if guess == secret:
        print("Угадали!")
        break
    elif guess < secret:
        print("Неверно, загаданное число больше")
    else:
        print("Неверно, загаданное число меньше")

    if i == 3:
        print(f"Загаданное число: {secret}")
